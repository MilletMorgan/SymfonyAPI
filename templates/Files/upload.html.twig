{# templates/product/new.html.twig #}

{% extends'base.html.twig' %}
{%block body%}
<h1>Adding a new product</h1>

<div class="container form-ajout">
    <div class="row">
        <div class="col-lg-12 col-md-6 col-lg-offset-3 col-md-offset-3 col-sm-12 col-xs-12">
            {{form_start(form)}} 
                {{form_widget(form)}}
                {{ form_row(form.image) }}
                <input class="btn btn-success" type="submit" value="Ajouter" /> 
            {{form_end(form)}}
        </div>
        <img src="{{ asset('uploads/images/8a28219572efc80f1bec29b2e6584eba.jpeg' ~ image.image) }}" height="auto" width="50%">
    </div>
</div>
{%endblock%}

